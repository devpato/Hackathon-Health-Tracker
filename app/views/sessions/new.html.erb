<div class="container">
  <% provide(:title, "Log in") %>
  <h1>Log in</h1>
  <hr>
  <div class="row col-md-offset-3">
    <div class="col-md-6 ">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>
        <%= f.submit "Log in", class: "btn verde" %>
      <% end %>
      <br>
      <p>New user? <a href="<%=new_user_path%>"</a>Sign Up Now!</p>
    </div>
  </div>
</div>
