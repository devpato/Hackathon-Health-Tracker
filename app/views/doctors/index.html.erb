<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>
<div class="input-group"> <span class="input-group-addon">Filter</span>

 <input id="filter" type="text" class="form-control" placeholder="Type here...">
</div>
<table class="table table-striped">
  <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>Area</th>
        <th>Age</th>
        <th>Picturename</th>
        <th>Picture</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <tbody class="searchable">
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.lastName %></td>
        <td><%= doctor.area %></td>
        <td><%= doctor.age %></td>
        <td><%= image_tag(doctor.picture_url, :width => 80) if doctor.picture.present? %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Doctor', new_doctor_path %>
<script>
  $(document).ready(function () {

    (function ($) {

        $('#filter').keyup(function () {

            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();

        })

    }(jQuery));

});
</script>
