<%= form_for(@food_entry) do |f| %>
  <% if @food_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food_entry.errors.count, "error") %> prohibited this food_entry from being saved:</h2>

      <ul>
      <% @food_entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
<div class="container">
<p id="notice"><%= notice %></p>
<div class="input-group"> <span class="input-group-addon"><i class='glyphicon glyphicon-search'></i></span>

   <input id="filter" type="text" class="form-control" placeholder="Type here...">
   </div>
   <br>
<table class="table table-striped">
  <thead >
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Calories</th>
      <th>Fat grams</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="searchable">
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.rest_name %></td>
        <td><%= food.name %></td>
        <td><%= food.cal %></td>
        <td><%= food.fat %></td>
        <td><%= food.sugar %></td>
        <td><%= image_tag(food.picture_url, :width => 80) if food.picture.present? %></td>
        <td><%= button_to 'Add',
                class: 'btn verde',
                action: 'create',
                food_id: food.id,
                controller: 'food_entries',
                :method => :post
                %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script>
  $(document).ready(function () {

    (function ($) {

        $('#filter').keyup(function () {

            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();

        })

    }(jQuery));

});
</script>

