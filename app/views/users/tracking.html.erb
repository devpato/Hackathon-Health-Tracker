<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Foods</h1>
<div class="input-group"> <span class="input-group-addon"><i class='glyphicon glyphicon-search'></i></span>

   <input id="filterz" type="text" class="form-control" placeholder="Type here...">
   </div>
   <br>
<table class="table table-striped">
  <thead >
    <tr>
      <th>Name</th>
      <th>Restaurant</th>
      <th>Calories</th>
      <th>Fat grams</th>
      <th>Location</th>
      <th>Picture</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="searchablez">
    <% Food.all.each do |food| %>
      <tr>
        <td><%= food.rest_name %></td>
        <td><%= food.cal %></td>
        <td><%= food.fat %></td>
        <td><%= food.sugar %></td>
        <td><%= food.location %></td>
        <td><%= image_tag(food.picture_url, :width => 80) if food.picture.present? %></td>
        <td><%= button_to 'Add',
                class: 'btn verde',
                action: 'create',
                food_id: food.id,
                controller: 'food_entries',
                :method => :post
                %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<script>
  $(document).ready(function () {

    (function ($) {

        $('#filterz').keyup(function () {

            var rex = new RegExp($(this).val(), 'i');
            $('.searchablez tr').hide();
            $('.searchablez tr').filter(function () {
                return rex.test($(this).text());
            }).show();

        })

    }(jQuery));

});
</script>




