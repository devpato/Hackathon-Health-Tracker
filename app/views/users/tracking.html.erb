  <thead >
    <tr>
      <th>Restaurant</th>
      <th>Name</th>
      <th>Calories</th>
      <th>Fat grams</th>
      <th>Sugar grams</th>
      <th>Location</th>
      <th>Picture</th>
    </tr>
  </thead>

  <tbody class="searchable">
    <% @foods.each do |food| %>
